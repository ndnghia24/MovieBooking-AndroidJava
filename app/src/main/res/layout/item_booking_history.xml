<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ava">
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgUser">
            <TextView
                android:id="@+id/tv_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Movie NAme">
            </TextView>

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/tv_movie_name"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="DateTime">
            </TextView>

            <TextView
                android:id="@+id/tv_cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/tv_datetime"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="Cinema">
            </TextView>

            <TextView
                android:id="@+id/tv_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/tv_cinema"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="Seat">
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_booking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:text="Booking time">
        </TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_booking_time"
            android:textSize="25dp"
            android:textColor="@color/gradient_blue"
            android:text="$10"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView >